  macros {
    brc: brc {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp LBRC &kp RBRC &kp LEFT>;
    };
    brk: brk {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp LBKT &kp RBKT &kp LEFT>;
    };
    par: par {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp LPAR &kp RPAR &kp LEFT>;
    };
    squot: squot {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp SQT &kp SQT &kp LEFT>;
    };
    dquot: dquot {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp DQT &kp DQT &kp LEFT>;
    };
    quest: quest {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp <&kp LS(LA(FSLH)) &kp QMARK &kp LEFT>;
    };
    excl: excl {
      compatible = "zmk,behaviors-macro"; 
      bindings = <&kp <&kp LA(N1) &kp EXCL &kp LEFT>;
    };
  };
  combos {
    compatible = "zmk,combos";
    // Enter bootloader in left half
    lreset {
      key-positions = <1 2 3 4>;
      bindings = <&bootloader>;
    };
    // Enter bootloader in right half
    rreset {
      key-positions = <7 8 9 10>;
      bindings = <&bootloader>;
    };
    // COMMON PROGRAMMING SYMBOLS
    lexcl {
      key-positions = <2 3>;
      bindings = <&kp LA(N1)>;
    };
    rexcl {
      key-positions = <3 4>;
      bindings = <&kp EXCL>;
    };
    grave {
      key-positions = <2 4>;
